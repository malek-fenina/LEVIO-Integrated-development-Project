@model IEnumerable<IdentityServer.Models.QuestionModel>

@{
    ViewBag.Title = "All Questions";
}

<h2>All Questions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>

                <div>
                    Please type the name of the project:  @Html.TextBox("search")
                    <input type="submit" value="Search" id="submit" class="btn btn-success" />

                </div>

            </td>
        </tr>

    </table>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.choice1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.choice2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.choice3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidChoise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeTest)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.choice1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.choice2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.choice3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValidChoise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeTest)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
