<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        #chart_container {
            width: 400px;
            height: 400px;
            border: 1px solid #ddd;
            padding: 1px;
            border-radius: 4px;
        }
    </style>
</head>

<body>

    <div id="panel-body">
        <canvas id="bar_chart"></canvas>

        <script>
        var repArray=@Html.Raw(Json.Encode(ViewBag.rep));
        var clientsNames=@Html.Raw(Json.Encode(ViewBag.clientsNames));
            var ctx=$("#bar_chart");
            var barChart=new Chart(ctx,{
                type:'bar',
                data:{
                    labels:clientsNames,
                    datasets:[{
                        label:"nombre de ressource  chez les clients",
                        data:repArray,
                        backgroundColor:["rgba(242, 166, 54, .5)","rgba(154,65,72,.5)","(54,25,92,.5)"],
                        borderColor:["rgb(242, 166, 54)","rgb(154,65,72)","(54,25,92)"],
                        borderWidth:1
                    }]

                },
                options:{
                    maintainAspectsRatio:false,
                    scales:{
                        yAxes:[{
                            ticks:{
                                beginAtZero:true
                            }}]}
                }
            });
           // bar_chart.remove
        </script>
    </div>




</body>

</html>